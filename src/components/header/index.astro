---
import BlogTitle from "./BlogTitle.astro";
import HeaderSearch from "./HeaderSearch.astro";
import ThemeIcon from "./ThemeIcon.astro";
import LanguageOptions from "./LanguageSelect.astro";
const { height = "50px", background = "#ffffff" } = Astro.props;
---

<header class="blog-header" onselectstart="return false">
  <span class="blog-title"><BlogTitle /></span>
  <span class="header-tools">
    <div style="margin-left: 10px;"><ThemeIcon /></div>
    <div style="margin-left: 10px;"><LanguageOptions /></div>
    <div><HeaderSearch /></div>
  </span>
</header>

<style define:vars={{ height, background }}>
  .blog-header {
    height: var(--height);
    background-color: var(--background);
    display: flex;
    flex-direction: row;
    z-index: 200;
  }

  .blog-title {
    height: 100%;
    width: 20%;
    display: flex;
    align-items: center;
    padding-left: 80px;
  }

  .header-tools {
    width: 100%;
    height: 100%;
    padding-right: 80px;
    display: flex;
    flex-direction: row-reverse;
  }

  .header-tools div {
    height: 100%;
    display: flex;
    align-items: center;
  }

  @media screen and (max-width: 636px) {
    .blog-title {
      padding-left: 20px;
    }

    .header-tools {
      padding-right: 20px;
    }
  }
</style>
